{
  "name": "@discord-bot/persistence",
  "version": "1.0.0",
  "description": "Persistence layer with repository interfaces and SQLite adapter",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ports": {
      "import": "./dist/ports/index.js",
      "types": "./dist/ports/index.d.ts"
    },
    "./sqlite": {
      "import": "./dist/sqlite/index.js",
      "types": "./dist/sqlite/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist *.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "kysely": "^0.27.4"
  },
  "devDependencies": {
    "@discord-bot/tsconfig": "*",
    "@types/better-sqlite3": "^7.6.11",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
